<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Devolta">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Oavesso">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Apele">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="avessodapele" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#5B6FDA"
                android:textAlignment="textEnd"
                tools:context=".sinopse">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="513dp"
                    android:layout_height="835dp"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.401"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.355"
                    app:srcCompat="@drawable/inserir_um_t_tuloo_avesso__4_" />

                <ScrollView
                    android:layout_width="295dp"
                    android:layout_height="529dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.797">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="match_parent"
                            android:layout_height="222dp"
                            app:srcCompat="@drawable/livros" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="1055dp"
                            android:fontFamily="serif"
                            android:text="O capítulo aprofunda a relação entre Pedro e seu pai, mostrando como Henrique influenciou a formação do filho, tanto intelectualmente quanto emocionalmente. As tensões familiares são exploradas, assim como os momentos de afeto e aprendizado entre eles. Pedro reflete sobre a dificuldade de entender completamente o pai enquanto ele estava vivo."
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="34sp" />

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="match_parent"
                            android:layout_height="197dp"
                            app:srcCompat="@drawable/refletindo" />
                    </LinearLayout>
                </ScrollView>

                <Button
                    android:id="@+id/btnSaoPetVoltar"
                    android:layout_width="110dp"
                    android:layout_height="58dp"
                    android:backgroundTint="#394270"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="voltar"
                    android:textColorHighlight="#5B6FDA"
                    android:textColorLink="#5B6FDA"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.902"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.963" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="375dp"
                    android:layout_height="179dp"
                    android:fontFamily="serif"
                    android:text="DE VOLTA A SÃO PETESBURGO"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="45sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.555"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.065" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>